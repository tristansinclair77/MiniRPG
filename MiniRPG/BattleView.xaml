<UserControl x:Class="MiniRPG.BattleView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:local="clr-namespace:MiniRPG"
             xmlns:converters="clr-namespace:MiniRPG.Converters"
             mc:Ignorable="d"
             d:DesignHeight="300" d:DesignWidth="400">
    <!-- TODO: Transition this logic to state-based ViewModel system later -->
    <!-- TODO: Add background art per location -->
    <!-- TODO: Add music/audio triggers when battle starts -->
    <!-- TODO: Replace ProgressBars with animated health bars or custom pixel-art overlay -->
    <!-- TODO: Insert Player/Enemy portraits here -->
    <!-- TODO: Later SceneManager or Animation layer -->
    <UserControl.Resources>
        <BooleanToVisibilityConverter x:Key="BoolToVis" />
        <local:ResultToColorConverter x:Key="ResultToColor" />
    </UserControl.Resources>
    <Grid Margin="10" Background="#222233">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
            <RowDefinition Height="120" />
        </Grid.RowDefinitions>

        <!-- Overlay for battle result -->
        <!-- TODO: Replace overlay with animated fade-in/out scene transition -->
        <!-- TODO: Replace static text with art-based "Victory" screen later -->
        <Grid>
            <TextBlock Text="{Binding BattleResult}"
                       Visibility="{Binding IsBattleOver, Converter={StaticResource BoolToVis}}"
                       HorizontalAlignment="Center" VerticalAlignment="Center"
                       FontSize="36" FontWeight="Bold"
                       Foreground="{Binding BattleResult, Converter={StaticResource ResultToColor}}"
                       TextAlignment="Center"
                       Panel.ZIndex="99" />
            <Button Content="Return to Map"
                    Command="{Binding ReturnToMapCommand}"
                    Visibility="{Binding IsBattleOver, Converter={StaticResource BoolToVis}}"
                    HorizontalAlignment="Center" VerticalAlignment="Bottom"
                    Margin="5" Padding="8,4" Width="180">
                <!-- TODO: Replace with animated return transition to Map screen -->
            </Button>
        </Grid>

        <!-- Top: Battle status -->
        <TextBlock Grid.Row="0" Name="BattleStatusText" Text="Battle in Progress" FontWeight="Bold" FontSize="16" HorizontalAlignment="Center" Margin="0,0,0,10" Foreground="#F9E97A" />

        <!-- HP Bars and Portraits -->
        <StackPanel Grid.Row="1" Orientation="Vertical" HorizontalAlignment="Center" VerticalAlignment="Top" Margin="0,0,0,10">
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" Margin="0,0,0,10">
                <StackPanel Margin="0,0,20,0">
                    <TextBlock Text="Player HP" FontWeight="Bold" HorizontalAlignment="Center" Foreground="White" />
                    <ProgressBar Name="PlayerHPBar" Value="{Binding Player.HP}" Maximum="{Binding Player.MaxHP}" Height="18" Width="120" />
                </StackPanel>
                <StackPanel>
                    <TextBlock Text="Enemy HP" FontWeight="Bold" HorizontalAlignment="Center" Foreground="White" />
                    <ProgressBar Name="EnemyHPBar" Value="{Binding EnemyHP}" Maximum="20" Height="18" Width="120" />
                </StackPanel>
            </StackPanel>
            <!-- TODO: Insert Player/Enemy portraits here -->
            <Button Name="AttackButton" Content="Attack" Command="{Binding AttackCommand}" Width="120" Margin="5" Padding="8,4" Foreground="#F9E97A" Background="#222233" FontWeight="Bold" />
            <Button Name="DefendButton" Content="Defend" Command="{Binding DefendCommand}" Width="120" Margin="5" Padding="8,4" Foreground="#F9E97A" Background="#222233" FontWeight="Bold" />
            <Button Name="RunButton" Content="Run" Command="{Binding RunCommand}" Width="120" Margin="5" Padding="8,4" Foreground="#F9E97A" Background="#222233" FontWeight="Bold" />
        </StackPanel>

        <!-- Bottom: Combat log with Border -->
        <Border Grid.Row="2" Margin="8" BorderBrush="#444466" BorderThickness="2" CornerRadius="6">
            <ScrollViewer VerticalScrollBarVisibility="Auto" HorizontalScrollBarVisibility="Auto">
                <ListBox Name="CombatLogListBox"
                         ItemsSource="{Binding CombatLog}"
                         FontFamily="Consolas"
                         FontSize="13"
                         Background="#1E1E2A" Foreground="White"
                         IsHitTestVisible="False" />
            </ScrollViewer>
        </Border>
    </Grid>
</UserControl>

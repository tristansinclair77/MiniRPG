<UserControl x:Class="MiniRPG.ReputationView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:converters="clr-namespace:MiniRPG.Converters"
             mc:Ignorable="d"
             d:DesignHeight="450" d:DesignWidth="600">
    <UserControl.Resources>
        <converters:FactionStandingConverter x:Key="FactionStandingConverter" />
        <converters:FactionStandingColorConverter x:Key="FactionStandingColorConverter" />
    </UserControl.Resources>
    <!-- TODO: Add faction emblems and colored standing indicators -->
    <!-- TODO: Add hover tooltips for faction lore -->
    <Grid Margin="10" Background="#222233">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>

        <!-- Header -->
        <TextBlock Grid.Row="0" Text="Reputation &amp; Factions" FontSize="24" FontWeight="Bold" 
                   Foreground="#F9E97A" HorizontalAlignment="Center" Margin="0,0,0,10" />

        <!-- Factions List -->
        <Border Grid.Row="1" Background="#292944" Padding="8">
            <ScrollViewer VerticalScrollBarVisibility="Auto">
                <ListBox ItemsSource="{Binding Factions}" 
                         Background="#222233" 
                         Foreground="White"
                         BorderThickness="0">
                    <ListBox.ItemTemplate>
                        <DataTemplate>
                            <Border Padding="10" Margin="5" Background="#333344" BorderBrush="#555566" BorderThickness="1">
                                <Grid>
                                    <Grid.RowDefinitions>
                                        <RowDefinition Height="Auto" />
                                        <RowDefinition Height="Auto" />
                                        <RowDefinition Height="Auto" />
                                    </Grid.RowDefinitions>
                                    
                                    <!-- Faction Name -->
                                    <TextBlock Grid.Row="0" Text="{Binding Name}" FontSize="16" FontWeight="Bold" 
                                               Foreground="#F9E97A" />
                                    
                                    <!-- Reputation -->
                                    <StackPanel Grid.Row="1" Orientation="Horizontal" Margin="0,5,0,5">
                                        <TextBlock Text="Reputation: " Foreground="White" />
                                        <TextBlock Text="{Binding Reputation}" Foreground="LightBlue" />
                                    </StackPanel>
                                    
                                    <!-- Standing -->
                                    <StackPanel Grid.Row="2" Orientation="Horizontal">
                                        <TextBlock Text="Standing: " Foreground="White" />
                                        <TextBlock Text="{Binding Path=., Converter={StaticResource FactionStandingConverter}}" 
                                                   Foreground="{Binding Path=., Converter={StaticResource FactionStandingColorConverter}}" 
                                                   FontWeight="Bold" />
                                    </StackPanel>
                                </Grid>
                            </Border>
                        </DataTemplate>
                    </ListBox.ItemTemplate>
                </ListBox>
            </ScrollViewer>
        </Border>

        <!-- Close Button -->
        <Button Grid.Row="2" 
                Content="Close" 
                Command="{Binding ExitReputationCommand}"
                Margin="0,10,0,0" 
                Padding="8,4" 
                Foreground="#F9E97A" 
                Background="#222233" 
                FontWeight="Bold"
                HorizontalAlignment="Center"
                Width="100">
        </Button>
    </Grid>
</UserControl>

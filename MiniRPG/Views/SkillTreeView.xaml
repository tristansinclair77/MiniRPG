<UserControl x:Class="MiniRPG.SkillTreeView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:converters="clr-namespace:MiniRPG.Converters"
             mc:Ignorable="d"
             d:DesignHeight="450" d:DesignWidth="600">
    <UserControl.Resources>
        <converters:BooleanToVisibilityConverter x:Key="BoolToVisibilityConverter" />
        <converters:InverseBooleanToVisibilityConverter x:Key="InverseBoolToVisibilityConverter" />
    </UserControl.Resources>
    <!-- TODO: Add category tabs for Attack / Defense / Magic -->
    <!-- TODO: Replace with icon grid layout and progress lines -->
    <!-- TODO: Add class specializations (Warrior, Mage, etc.) -->
    <!-- TODO: Add skill upgrade tiers -->
    <!-- TODO: Add skill synergy effects -->
    <Grid Margin="10" Background="#222233">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>

        <!-- Header -->
        <TextBlock Grid.Row="0" Text="Skill Tree" FontSize="24" FontWeight="Bold" 
                   Foreground="#F9E97A" HorizontalAlignment="Center" Margin="0,0,0,10" />

        <!-- Skill Points Display -->
        <Border Grid.Row="1" Background="#292944" Padding="10" Margin="0,0,0,10">
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                <TextBlock Text="Available Skill Points: " FontSize="16" FontWeight="Bold" 
                           Foreground="White" VerticalAlignment="Center" />
                <TextBlock Text="{Binding Player.SkillPoints}" FontSize="16" FontWeight="Bold" 
                           Foreground="#F9E97A" VerticalAlignment="Center" />
            </StackPanel>
        </Border>

        <!-- Skills List -->
        <Border Grid.Row="2" Background="#292944" Padding="8">
            <ScrollViewer VerticalScrollBarVisibility="Auto">
                <ListBox ItemsSource="{Binding AllSkills}" 
                         SelectedItem="{Binding SelectedSkill, Mode=TwoWay}"
                         Background="#222233" 
                         Foreground="White"
                         BorderThickness="0">
                    <ListBox.ItemTemplate>
                        <DataTemplate>
                            <Border Padding="10" Margin="5" Background="#333344" BorderBrush="#555566" BorderThickness="1">
                                <Grid>
                                    <Grid.RowDefinitions>
                                        <RowDefinition Height="Auto" />
                                        <RowDefinition Height="Auto" />
                                        <RowDefinition Height="Auto" />
                                        <RowDefinition Height="Auto" />
                                    </Grid.RowDefinitions>
                                    
                                    <!-- Skill Name -->
                                    <StackPanel Grid.Row="0" Orientation="Horizontal">
                                        <TextBlock Text="{Binding Name}" FontSize="16" FontWeight="Bold" 
                                                   Foreground="#F9E97A" />
                                        <TextBlock Text=" [UNLOCKED]" FontSize="14" FontWeight="Bold" 
                                                   Foreground="LightGreen" Margin="10,0,0,0"
                                                   Visibility="{Binding IsUnlocked, Converter={StaticResource BoolToVisibilityConverter}}" />
                                    </StackPanel>
                                    
                                    <!-- Description -->
                                    <TextBlock Grid.Row="1" Text="{Binding Description}" 
                                               Foreground="White" TextWrapping="Wrap" Margin="0,5,0,5" />
                                    
                                    <!-- Requirements and Cost -->
                                    <StackPanel Grid.Row="2" Orientation="Horizontal" Margin="0,0,0,5">
                                        <TextBlock Text="Level Required: " Foreground="Gray" />
                                        <TextBlock Text="{Binding LevelRequirement}" Foreground="White" Margin="0,0,10,0" />
                                        <TextBlock Text="Cost: " Foreground="Gray" />
                                        <TextBlock Text="{Binding CostSP}" Foreground="#F9E97A" />
                                        <TextBlock Text=" SP" Foreground="#F9E97A" />
                                    </StackPanel>
                                    
                                    <!-- Skill Type and Power -->
                                    <StackPanel Grid.Row="3" Orientation="Horizontal">
                                        <TextBlock Text="Type: " Foreground="Gray" />
                                        <TextBlock Text="{Binding EffectType}" Foreground="LightBlue" Margin="0,0,10,0" />
                                        <TextBlock Text="Power: " Foreground="Gray" />
                                        <TextBlock Text="{Binding Power}" Foreground="LightCoral" Margin="0,0,10,0" />
                                        <TextBlock Text="[Passive]" Foreground="LightGreen"
                                                   Visibility="{Binding IsPassive, Converter={StaticResource BoolToVisibilityConverter}}" />
                                        <TextBlock Text="[Active]" Foreground="Orange"
                                                   Visibility="{Binding IsPassive, Converter={StaticResource InverseBoolToVisibilityConverter}}" />
                                    </StackPanel>
                                </Grid>
                            </Border>
                        </DataTemplate>
                    </ListBox.ItemTemplate>
                </ListBox>
            </ScrollViewer>
        </Border>

        <!-- Unlock Button -->
        <Border Grid.Row="3" Background="#292944" Padding="10" Margin="0,10,0,0">
            <Button Content="Unlock Skill" 
                    Command="{Binding UnlockSkillCommand}"
                    Padding="15,8" 
                    Foreground="#F9E97A" 
                    Background="#222233" 
                    FontWeight="Bold"
                    FontSize="14"
                    HorizontalAlignment="Center"
                    Width="150">
            </Button>
        </Border>

        <!-- Close Button -->
        <Button Grid.Row="4" 
                Content="Close" 
                Command="{Binding ExitSkillTreeCommand}"
                Margin="0,10,0,0" 
                Padding="8,4" 
                Foreground="#F9E97A" 
                Background="#222233" 
                FontWeight="Bold"
                HorizontalAlignment="Center"
                Width="100">
        </Button>
    </Grid>
</UserControl>

<UserControl x:Class="MiniRPG.DialogueView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             mc:Ignorable="d"
             d:DesignHeight="400" d:DesignWidth="600">
    <!-- TODO: Add character portrait -->
    <!-- TODO: Add typing animation and voice blips -->
    <!-- TODO: Add relationship tracker visuals -->
    <Grid Margin="10" Background="#222233">
        <Grid.RowDefinitions>
            <RowDefinition Height="*" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>

        <!-- Main Dialogue Card -->
        <Border Grid.Row="0" 
                Background="#292944" 
                Padding="20" 
                BorderBrush="#444466" 
                BorderThickness="3" 
                CornerRadius="8"
                Margin="20">
            <StackPanel>
                <!-- NPC Name -->
                <TextBlock Text="{Binding CurrentNPC.Name}" 
                           FontSize="24" 
                           FontWeight="Bold" 
                           Foreground="#F9E97A" 
                           HorizontalAlignment="Left"
                           Margin="0,0,0,15" />

                <!-- NPC Role -->
                <TextBlock Text="{Binding CurrentNPC.Role, StringFormat='[{0}]'}" 
                           FontSize="14" 
                           FontStyle="Italic"
                           Foreground="#AABBCC" 
                           HorizontalAlignment="Left"
                           Margin="0,0,0,20" />

                <!-- Dialogue Text Area -->
                <Border Background="#222233" 
                        Padding="15" 
                        BorderBrush="#444466" 
                        BorderThickness="2" 
                        CornerRadius="4"
                        MinHeight="150"
                        Margin="0,0,0,20">
                    <ScrollViewer VerticalScrollBarVisibility="Auto">
                        <TextBlock Text="{Binding CurrentDialogue}" 
                                   FontSize="16" 
                                   Foreground="White" 
                                   TextWrapping="Wrap"
                                   LineHeight="24" />
                    </ScrollViewer>
                </Border>

                <!-- Button Panel -->
                <StackPanel Orientation="Horizontal" 
                            HorizontalAlignment="Center"
                            Margin="0,10,0,0">
                    <!-- Next Button -->
                    <Button Content="Next" 
                            Command="{Binding NextDialogueCommand}"
                            Width="100"
                            Height="40"
                            Margin="0,0,10,0"
                            Padding="8,4"
                            Foreground="#F9E97A"
                            Background="#444466"
                            FontWeight="Bold"
                            FontSize="14">
                        <Button.Style>
                            <Style TargetType="Button">
                                <Setter Property="Background" Value="#444466" />
                                <Style.Triggers>
                                    <Trigger Property="IsMouseOver" Value="True">
                                        <Setter Property="Background" Value="#555577" />
                                    </Trigger>
                                    <Trigger Property="IsEnabled" Value="False">
                                        <Setter Property="Background" Value="#333344" />
                                        <Setter Property="Foreground" Value="#888899" />
                                    </Trigger>
                                </Style.Triggers>
                            </Style>
                        </Button.Style>
                    </Button>

                    <!-- Accept Quest Button (visible only if OfferedQuest exists) -->
                    <Button Content="Accept Quest" 
                            Command="{Binding AcceptQuestCommand}"
                            Width="140"
                            Height="40"
                            Margin="0,0,10,0"
                            Padding="8,4"
                            Foreground="#F9E97A"
                            Background="#446644"
                            FontWeight="Bold"
                            FontSize="14">
                        <Button.Style>
                            <Style TargetType="Button">
                                <Setter Property="Background" Value="#446644" />
                                <Setter Property="Visibility" Value="{Binding HasOfferedQuest, Converter={StaticResource BoolToVisibilityConverter}}" />
                                <Style.Triggers>
                                    <Trigger Property="IsMouseOver" Value="True">
                                        <Setter Property="Background" Value="#557755" />
                                    </Trigger>
                                    <Trigger Property="IsEnabled" Value="False">
                                        <Setter Property="Background" Value="#334433" />
                                        <Setter Property="Foreground" Value="#888899" />
                                    </Trigger>
                                </Style.Triggers>
                            </Style>
                        </Button.Style>
                    </Button>

                    <!-- Leave Button -->
                    <Button Content="Leave" 
                            Command="{Binding LeaveDialogueCommand}"
                            Width="100"
                            Height="40"
                            Padding="8,4"
                            Foreground="#F9E97A"
                            Background="#664444"
                            FontWeight="Bold"
                            FontSize="14">
                        <Button.Style>
                            <Style TargetType="Button">
                                <Setter Property="Background" Value="#664444" />
                                <Style.Triggers>
                                    <Trigger Property="IsMouseOver" Value="True">
                                        <Setter Property="Background" Value="#775555" />
                                    </Trigger>
                                </Style.Triggers>
                            </Style>
                        </Button.Style>
                    </Button>
                </StackPanel>
            </StackPanel>
        </Border>
    </Grid>
</UserControl>

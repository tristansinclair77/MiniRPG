<UserControl x:Class="MiniRPG.ShopView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             mc:Ignorable="d"
             d:DesignHeight="400" d:DesignWidth="600">
    <!-- TODO: Add shopkeeper portrait and themed background -->
    <!-- TODO: Replace with pixel UI and sound effects -->
    <!-- TODO: Add rare item rotation -->
    <!-- TODO: Add equipment upgrade system -->
    <!-- TODO: Add shopkeeper dialogue and art -->
    <Grid Margin="10" Background="#222233">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>

        <!-- Shop Header -->
        <TextBlock Grid.Row="0" Text="Shop" FontSize="20" FontWeight="Bold" 
                   Foreground="#F9E97A" HorizontalAlignment="Center" Margin="0,0,0,10" />

        <!-- Main Content Area -->
        <Grid Grid.Row="1">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="*" />
            </Grid.ColumnDefinitions>

            <!-- Left Section: Shop Inventory -->
            <Border Grid.Column="0" Background="#292944" Padding="8" Margin="0,0,5,0">
                <StackPanel>
                    <TextBlock Text="Shop Inventory" FontWeight="Bold" Foreground="#F9E97A" Margin="0,0,0,5" />
                    <ListBox x:Name="ShopInventoryListBox" 
                             ItemsSource="{Binding ShopInventory}" 
                             SelectedItem="{Binding SelectedItem, Mode=TwoWay}"
                             Background="#222233" 
                             Foreground="White" 
                             Height="150">
                        <ListBox.ItemTemplate>
                            <DataTemplate>
                                <StackPanel Orientation="Horizontal">
                                    <TextBlock Text="{Binding Item.Name}" FontWeight="Bold" Foreground="White" />
                                    <TextBlock Text=" - " Foreground="White" />
                                    <TextBlock Text="{Binding BuyPrice}" Foreground="#F9E97A" />
                                    <TextBlock Text=" gold" Foreground="#F9E97A" />
                                </StackPanel>
                            </DataTemplate>
                        </ListBox.ItemTemplate>
                    </ListBox>
                </StackPanel>
            </Border>

            <!-- Right Section: Player Inventory -->
            <Border Grid.Column="1" Background="#292944" Padding="8" Margin="5,0,0,0">
                <StackPanel>
                    <TextBlock FontWeight="Bold" Foreground="#F9E97A" Margin="0,0,0,5">
                        <Run Text="Your Inventory (" />
                        <Run Text="{Binding Player.InventoryCount, Mode=OneWay}" />
                        <Run Text="/" />
                        <Run Text="{Binding Player.MaxInventoryCapacity, Mode=OneWay}" />
                        <Run Text=")" />
                    </TextBlock>
                    <ListBox x:Name="PlayerInventoryListBox" 
                             ItemsSource="{Binding Player.Inventory}" 
                             SelectedItem="{Binding SelectedInventoryItem, Mode=TwoWay}"
                             Background="#222233" 
                             Foreground="White" 
                             Height="150">
                        <ListBox.ItemTemplate>
                            <DataTemplate>
                                <StackPanel Orientation="Horizontal">
                                    <TextBlock Text="{Binding Name}" FontWeight="Bold" Foreground="White" />
                                    <TextBlock Text=" (" Foreground="White" />
                                    <TextBlock Text="{Binding Type}" Foreground="White" />
                                    <TextBlock Text=")" Foreground="White" />
                                </StackPanel>
                            </DataTemplate>
                        </ListBox.ItemTemplate>
                    </ListBox>
                </StackPanel>
            </Border>
        </Grid>

        <!-- Actions and Gold Display -->
        <Border Grid.Row="2" Background="#292944" Padding="8" Margin="0,10,0,0">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="Auto" />
                </Grid.ColumnDefinitions>

                <!-- Item Details -->
                <StackPanel Grid.Column="0">
                    <TextBlock Text="Item Details" FontWeight="Bold" Foreground="#F9E97A" Margin="0,0,0,5" />
                    <TextBlock FontWeight="Bold" Foreground="White">
                        <Run Text="{Binding SelectedItem.Item.Name, TargetNullValue='', FallbackValue=''}" />
                        <Run Text="{Binding SelectedInventoryItem.Name, TargetNullValue='', FallbackValue=''}" />
                    </TextBlock>
                    <TextBlock Foreground="White" TextWrapping="Wrap">
                        <Run Text="{Binding SelectedItem.Item.Description, TargetNullValue='', FallbackValue=''}" />
                        <Run Text="{Binding SelectedInventoryItem.Description, TargetNullValue='', FallbackValue=''}" />
                    </TextBlock>
                    <StackPanel Orientation="Horizontal" Margin="0,5,0,0">
                        <TextBlock Text="Buy Price: " Foreground="White" />
                        <TextBlock Text="{Binding SelectedItem.BuyPrice, TargetNullValue='--', FallbackValue='--'}" Foreground="#F9E97A" />
                        <TextBlock Text=" gold | " Foreground="#F9E97A" Margin="0,0,8,0" />
                        <TextBlock Text="Sell Price: " Foreground="White" />
                        <TextBlock Text="{Binding SelectedItem.SellPrice, TargetNullValue='--', FallbackValue='--'}" Foreground="#F9E97A" />
                        <TextBlock Text=" gold" Foreground="#F9E97A" />
                    </StackPanel>
                </StackPanel>

                <!-- Gold and Action Buttons -->
                <StackPanel Grid.Column="1" Margin="20,0,0,0">
                    <TextBlock Text="Gold:" FontWeight="Bold" Foreground="#F9E97A" FontSize="16" />
                    <TextBlock Text="{Binding Player.Gold}" Foreground="White" FontSize="14" Margin="0,0,0,10" />
                    
                    <Button Content="Buy" 
                            Command="{Binding BuyCommand}" 
                            Margin="0,0,0,8" 
                            Padding="8,4" 
                            Width="100"
                            Foreground="#F9E97A" 
                            Background="#222233" 
                            FontWeight="Bold" />
                    
                    <Button Content="Sell" 
                            Command="{Binding SellCommand}" 
                            Margin="0,0,0,8" 
                            Padding="8,4" 
                            Width="100"
                            Foreground="#F9E97A" 
                            Background="#222233" 
                            FontWeight="Bold" />
                </StackPanel>
            </Grid>
        </Border>

        <!-- Leave Shop Button -->
        <Button Grid.Row="3" 
                Content="Leave Shop" 
                Command="{Binding ExitShopCommand}"
                Margin="0,10,0,0" 
                Padding="8,4" 
                Foreground="#F9E97A" 
                Background="#222233" 
                FontWeight="Bold"
                HorizontalAlignment="Center">
            <!-- TODO: Add exit confirmation and goodbye dialogue -->
        </Button>
    </Grid>
</UserControl>
<UserControl x:Class="MiniRPG.CraftingView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             mc:Ignorable="d"
             d:DesignHeight="450" d:DesignWidth="800">
    <!-- TODO: Add crafting progress bar animation -->
    <!-- TODO: Add recipe category tabs (Weapons, Armor, Potions) -->
    <Grid Margin="10" Background="#222233">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>

        <!-- Header -->
        <TextBlock Grid.Row="0" Text="Crafting &amp; Enhancement" FontSize="24" FontWeight="Bold" 
                   Foreground="#F9E97A" HorizontalAlignment="Center" Margin="0,0,0,10" />

        <!-- Main Content Area -->
        <Grid Grid.Row="1">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="2*" />
                <ColumnDefinition Width="3*" />
            </Grid.ColumnDefinitions>

            <!-- Left: Available Recipes -->
            <Border Grid.Column="0" Background="#292944" Padding="8" Margin="0,0,5,0">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto" />
                        <RowDefinition Height="*" />
                    </Grid.RowDefinitions>

                    <TextBlock Grid.Row="0" Text="Available Recipes" FontSize="16" FontWeight="Bold" 
                               Foreground="#F9E97A" Margin="0,0,0,5" />

                    <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto">
                        <ListBox ItemsSource="{Binding AllRecipes}" 
                                 SelectedItem="{Binding SelectedRecipe}"
                                 Background="#222233" 
                                 Foreground="White"
                                 BorderThickness="0">
                            <ListBox.ItemTemplate>
                                <DataTemplate>
                                    <Border Padding="8" Margin="3" Background="#333344" BorderBrush="#555566" BorderThickness="1">
                                        <StackPanel>
                                            <TextBlock Text="{Binding Name}" FontSize="14" FontWeight="Bold" 
                                                       Foreground="#F9E97A" />
                                            <TextBlock Text="{Binding ResultItem.Type}" FontSize="11" 
                                                       Foreground="LightGray" Margin="0,2,0,0" />
                                        </StackPanel>
                                    </Border>
                                </DataTemplate>
                            </ListBox.ItemTemplate>
                        </ListBox>
                    </ScrollViewer>
                </Grid>
            </Border>

            <!-- Right: Recipe Details -->
            <Border Grid.Column="1" Background="#292944" Padding="8" Margin="5,0,0,0">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto" />
                        <RowDefinition Height="Auto" />
                        <RowDefinition Height="Auto" />
                        <RowDefinition Height="*" />
                        <RowDefinition Height="Auto" />
                        <RowDefinition Height="Auto" />
                    </Grid.RowDefinitions>

                    <!-- Recipe Name -->
                    <TextBlock Grid.Row="0" 
                               Text="{Binding SelectedRecipe.Name, TargetNullValue='Select a Recipe'}" 
                               FontSize="18" FontWeight="Bold" 
                               Foreground="#F9E97A" Margin="0,0,0,10" />

                    <!-- Recipe Description -->
                    <TextBlock Grid.Row="1" 
                               Text="{Binding SelectedRecipe.Description}" 
                               FontSize="13" 
                               Foreground="White" 
                               TextWrapping="Wrap"
                               Margin="0,0,0,10" />

                    <!-- Result Item Details -->
                    <StackPanel Grid.Row="2" Margin="0,0,0,10">
                        <TextBlock Text="Creates:" FontSize="12" FontWeight="Bold" Foreground="LightBlue" />
                        <StackPanel Orientation="Horizontal" Margin="5,2,0,0">
                            <TextBlock Text="{Binding SelectedRecipe.ResultItem.Name}" Foreground="White" />
                            <TextBlock Text=" - " Foreground="Gray" Margin="5,0" />
                            <TextBlock Text="{Binding SelectedRecipe.ResultItem.Description}" 
                                       Foreground="LightGray" TextWrapping="Wrap" />
                        </StackPanel>
                    </StackPanel>

                    <!-- Required Materials -->
                    <Border Grid.Row="3" Background="#333344" Padding="8" Margin="0,0,0,10">
                        <ScrollViewer VerticalScrollBarVisibility="Auto">
                            <StackPanel>
                                <TextBlock Text="Required Materials:" FontSize="12" FontWeight="Bold" 
                                           Foreground="LightBlue" Margin="0,0,0,5" />

                                <ItemsControl ItemsSource="{Binding SelectedRecipe.RequiredMaterials}">
                                    <ItemsControl.ItemTemplate>
                                        <DataTemplate>
                                            <StackPanel Orientation="Horizontal" Margin="5,2,0,0">
                                                <TextBlock Text="{Binding Key}" Foreground="White" />
                                                <TextBlock Text=" x " Foreground="Gray" Margin="5,0" />
                                                <TextBlock Text="{Binding Value}" Foreground="LightBlue" />
                                            </StackPanel>
                                        </DataTemplate>
                                    </ItemsControl.ItemTemplate>
                                </ItemsControl>

                                <Separator Margin="0,10" Background="#555566" />

                                <StackPanel Orientation="Horizontal" Margin="5,2,0,0">
                                    <TextBlock Text="Required Gold: " Foreground="White" FontWeight="Bold" />
                                    <TextBlock Text="{Binding SelectedRecipe.RequiredGold}" Foreground="#F9E97A" />
                                </StackPanel>
                            </StackPanel>
                        </ScrollViewer>
                    </Border>

                    <!-- Player Gold Display -->
                    <Border Grid.Row="4" Background="#444455" Padding="8" Margin="0,0,0,10">
                        <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                            <TextBlock Text="Your Gold: " Foreground="White" FontSize="14" FontWeight="Bold" />
                            <TextBlock Text="{Binding Player.Gold}" Foreground="#F9E97A" FontSize="14" FontWeight="Bold" />
                        </StackPanel>
                    </Border>

                    <!-- Craft Button -->
                    <Button Grid.Row="5" 
                            Content="Craft Item" 
                            Command="{Binding CraftCommand}"
                            Padding="12,6" 
                            Foreground="#F9E97A" 
                            Background="#222233" 
                            FontWeight="Bold"
                            FontSize="14"
                            HorizontalAlignment="Center"
                            Width="150">
                    </Button>
                </Grid>
            </Border>
        </Grid>

        <!-- Exit Button -->
        <Button Grid.Row="2" 
                Content="Exit" 
                Command="{Binding ExitCraftingCommand}"
                Margin="0,10,0,0" 
                Padding="8,4" 
                Foreground="#F9E97A" 
                Background="#222233" 
                FontWeight="Bold"
                HorizontalAlignment="Center"
                Width="100">
        </Button>
    </Grid>
</UserControl>

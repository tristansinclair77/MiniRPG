<UserControl x:Class="MiniRPG.ShopView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             mc:Ignorable="d"
             d:DesignHeight="400" d:DesignWidth="600">
    <!-- TODO: Add shopkeeper portrait and themed background -->
    <!-- TODO: Replace with pixel UI and sound effects -->
    <Grid Margin="10" Background="#222233">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*" />
            <ColumnDefinition Width="Auto" />
        </Grid.ColumnDefinitions>

        <!-- Shop Header -->
        <TextBlock Grid.Row="0" Grid.ColumnSpan="2" Text="Shop" FontSize="20" FontWeight="Bold" 
                   Foreground="#F9E97A" HorizontalAlignment="Center" Margin="0,0,0,10" />

        <!-- Left Section: Shop Inventory -->
        <Border Grid.Row="1" Grid.Column="0" Background="#292944" Padding="8" Margin="0,0,10,0">
            <StackPanel>
                <TextBlock Text="Shop Inventory" FontWeight="Bold" Foreground="#F9E97A" Margin="0,0,0,5" />
                <ListBox x:Name="ShopInventoryListBox" 
                         ItemsSource="{Binding ShopInventory}" 
                         SelectedItem="{Binding SelectedShopItem, Mode=TwoWay}"
                         Background="#222233" 
                         Foreground="White" 
                         Height="200">
                    <ListBox.ItemTemplate>
                        <DataTemplate>
                            <StackPanel Orientation="Horizontal">
                                <TextBlock Text="{Binding Item.Name}" FontWeight="Bold" Foreground="White" />
                                <TextBlock Text=" - " Foreground="White" />
                                <TextBlock Text="{Binding BuyPrice}" Foreground="#F9E97A" />
                                <TextBlock Text=" gold" Foreground="#F9E97A" />
                            </StackPanel>
                        </DataTemplate>
                    </ListBox.ItemTemplate>
                </ListBox>
            </StackPanel>
        </Border>

        <!-- Right Section: Actions and Gold -->
        <Border Grid.Row="1" Grid.Column="1" Background="#292944" Padding="8" MinWidth="150">
            <StackPanel>
                <TextBlock Text="Gold:" FontWeight="Bold" Foreground="#F9E97A" FontSize="16" />
                <TextBlock Text="{Binding Player.Gold}" Foreground="White" FontSize="14" Margin="0,0,0,10" />
                
                <Button Content="Buy" 
                        Command="{Binding BuyCommand}" 
                        CommandParameter="{Binding SelectedItem, ElementName=ShopInventoryListBox}"
                        Margin="0,0,0,8" 
                        Padding="8,4" 
                        Foreground="#F9E97A" 
                        Background="#222233" 
                        FontWeight="Bold" />
                
                <Button Content="Sell" 
                        Command="{Binding SellCommand}" 
                        CommandParameter="{Binding SelectedInventoryItem}"
                        Margin="0,0,0,8" 
                        Padding="8,4" 
                        Foreground="#F9E97A" 
                        Background="#222233" 
                        FontWeight="Bold" />
            </StackPanel>
        </Border>

        <!-- Bottom Section: Item Details -->
        <Border Grid.Row="2" Grid.ColumnSpan="2" Background="#292944" Padding="8" Margin="0,10,0,0">
            <StackPanel>
                <TextBlock Text="Item Details" FontWeight="Bold" Foreground="#F9E97A" Margin="0,0,0,5" />
                <TextBlock Text="{Binding SelectedShopItem.Item.Name}" FontWeight="Bold" Foreground="White" />
                <TextBlock Text="{Binding SelectedShopItem.Item.Description}" Foreground="White" TextWrapping="Wrap" />
                <StackPanel Orientation="Horizontal" Margin="0,5,0,0">
                    <TextBlock Text="Buy Price: " Foreground="White" />
                    <TextBlock Text="{Binding SelectedShopItem.BuyPrice}" Foreground="#F9E97A" />
                    <TextBlock Text=" gold" Foreground="#F9E97A" Margin="0,0,20,0" />
                    <TextBlock Text="Sell Price: " Foreground="White" />
                    <TextBlock Text="{Binding SelectedShopItem.SellPrice}" Foreground="#F9E97A" />
                    <TextBlock Text=" gold" Foreground="#F9E97A" />
                </StackPanel>
            </StackPanel>
        </Border>

        <!-- Leave Shop Button -->
        <Button Grid.Row="3" Grid.ColumnSpan="2" 
                Content="Leave Shop" 
                Command="{Binding ExitShopCommand}"
                Margin="0,10,0,0" 
                Padding="8,4" 
                Foreground="#F9E97A" 
                Background="#222233" 
                FontWeight="Bold"
                HorizontalAlignment="Center">
            <!-- TODO: Add exit confirmation and goodbye dialogue -->
        </Button>
    </Grid>
</UserControl>